<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="lib.member.model.MemberDAO">
	<!-- 가입(직원 or 가상의 웹페이지) -->
	<insert id="insertMember"
		parameterType="lib.member.model.MemberDTO">
		insert into member values(#{mem_id}, #{mem_pw},
		#{mem_name}, #{mem_jumin}, #{mem_address},
		#{mem_phone}, #{mem_email},
		#{mem_rank})
	</insert>
	
	<!-- 연체기간 자동 ++ => 할거 다 해놓고 하고싶으면 하기. 아마 글쓰기에서 +1이랑 비슷할듯 -->
	<!-- <insert id="overdueMember" parameterType="lib.member.model.MemberDTO">
		insert into member(mem_overdue_period) values ((select NVL(max (rent_enddate)+1,0) from member));
	</insert> -->
	
	<!-- 수정 -->
	<update id="updateMember"
		parameterType="lib.member.model.MemberDTO">
		update member set mem_pw=#{mem_pw},
		mem_address=#{mem_address}, mem_phone=#{mem_phone},
		mem_email=#{mem_email} where mem_id = #{mem_id}
	</update>

	<!-- 삭제(탈퇴) -->
	<delete id="deleteMember"
		parameterType="lib.member.model.MemberDTO">
		delete from member where mem_id = #{mem_id}
	</delete>

	<!-- 리스트(selectAll) -->
	<select id="getMemberList" 
		resultType="lib.member.model.MemberDTO">
		select * from member
	</select>

		<!-- 검색(select where) -->
		<select id="getMember" parameterType="String"
			resultType="lib.member.model.MemberDTO">
			select * from member where mem_id = #{mem_id}
		</select>

</mapper>



