<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 인터페이스의 경로를 적어줌 -->
<mapper namespace="employeeLoginMapper">

<select id="loginCheck" resultType="String">
	<![CDATA[
		SELECT count(*) FROM employee_management
		WHERE emp_no = #{emp_no} AND emp_password = #{emp_password}
	]]>
</select>

<select id="selectSessionInfo" resultType="lib.employee.management.model.EmployeeDTO">
	<![CDATA[
		SELECT * FROM employee_management
		WHERE emp_no = #{emp_no}
	]]>
	
</select>
</mapper>
	
