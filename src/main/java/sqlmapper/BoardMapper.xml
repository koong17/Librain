<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 인터페이스의 경로를 적어줌 -->
<mapper namespace="lib.employee.board.mapper.BoardMapper">

	<!-- 게시판 목록 조회 -->
<!-- 	<select id="getList" resultType="lib.employee.board.model.BoardVO">
<![CDATA[
select * from tbl_board where bno > 0
]]>
	</select> -->

<!-- 단순 값 입력 - int(쿼리 결과 갯수)반환 -->
	<insert id="insert">
		insert into tbl_board 
			(
			bno , title , content , writer ) 
		values ( 
			seq_board.nextval ,#{title}, #{content}, #{writer} )
</insert>

<!-- @SelectKey라는 MyBatis의 annotation 이용. PK값을 미리(BEFORE) SQL을 통해 처리해두고 특정한 이름(bno)으로 결과를 보관하는 방식.
@Insert할 때 sql문을 보면 #{bno}과 같이 이미 처리 된 결과를 이용하는 것을 볼 수 있음 -->
	<insert id="insertSelectKey">
		<selectKey keyProperty="bno" order="BEFORE"
			resultType="long">
			select seq_board.nextval from dual
		</selectKey>
		insert into tbl_board (bno, title, content, writer)
		values (#{bno},	#{title}, #{content}, #{writer})
	</insert>
	
	<select id="read" resultType="lib.employee.board.model.BoardDTO">
		select * from tbl_board where bno = #{bno}
	</select>
	
	<delete id="delete">
		delete from tbl_board where bno = #{bno}
	</delete>
	
	<!-- updateDate칼럼 : 최종 수정시간 의미. regDate : 최초 등록시간 의미. 따라서 regDate은 바뀌지 않음. -->
	<update id="update" >
		update tbl_board
			set title =#{title},
			content = #{content},
			writer = #{writer},
			updateDate = sysdate
			where bno = #{bno}
	</update>

	<!-- 목록과 데이터개수 처리 -->
	<sql id="criteria">
	<trim prefix="(" suffix=") AND " prefixOverrides="OR">
		<foreach item='type' collection="typeArr">
			<trim prefix="OR">
				<choose>
					<when test="type == 'T'.toString()">
						title like '%' || #{keyword} ||'%'
					</when>
					<when test="type == 'C'.toString()">
						content like '%'|| #{keyword} ||'%'
					</when>
					<when test="type == 'W'.toString()">
						writer like '%' || #{keyword} ||'%'
					</when>
				</choose>
			</trim>
		</foreach>
	</trim>
</sql>

	<select id="getListWithPaging" resultType="lib.employee.board.model.BoardDTO">
		<![CDATA[
			select
				bno, title, content, writer, regdate, updatedate
			from
				(
				select /*+INDEX_DESC(tbl_board pk_board2) */
					rownum rn, bno, title, content, writer, regdate, updatedate
				from
					tbl_board
				where
		]]>
		
		<include refid="criteria"></include>		
		
		<![CDATA[
			rownum <= #{pageNum} * #{amount}
			)
		where rn > (#{pageNum}-1) * #{amount}
		]]>
	</select>

	<select id="getTotalCount" resultType="int">
		select count(*) from tbl_board 
		where 
		<include refid="criteria"></include>
		bno > 0
	</select>
</mapper>
	
